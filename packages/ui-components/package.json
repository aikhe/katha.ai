{
  "name": "@katha-core/ui-components",
  "type": "module",
  "exports": {
    "./index.css": "./dist/index.css",
    "./*": [
      "./src/*.tsx",
      "./src/*/index.tsx",
      "./src/*.ts",
      "./src/*/index.ts"
    ]
  },
  "scripts": {
    "build": "tailwindcss -i ./src/styles/index.css -o ./dist/index.css",
    "dev": "tailwindcss -i ./src/styles/index.css -o ./dist/index.css --watch"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/postcss": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5"
  },
  "imports": {
    "#ui/*": [
      "./src/*",
      "./src/*.tsx",
      "./src/*/index.tsx",
      "./src/*.ts",
      "./src/*/index.ts"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
