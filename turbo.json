{
  "$schema": "https://turborepo.com/schema.json",
  "dangerouslyDisablePackageManagerCheck": true,
  "tasks": {
    "build": {
      "dependsOn": ["^topo"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^topo"]
    },
    "prettier": {
      "inputs": ["**/*.{js,mjs,ts,tsx,md,mdx,json,yml,css}"],
      "outputs": [".prettiercache"]
    },
    "prettier:fix": {
      "dependsOn": ["^prettier"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    }
  }
}
